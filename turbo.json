{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": true,
      "persistent": true
    },
    "debug": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": false
    },
    "tsc": {
      "cache": true,
      "persistent": false
    },
    "bundle": {
      "cache": true,
      "persistent": false
    },
    "storybook": {
      "cache": true,
      "persistent": false
    }
  }
}
